<div class="content">
  <div class="container">
      <div class="thickline"></div>
  </div>

  <nav class="breadcrumb container">
      <a class="breadcrumb-item" href='<%= storefront_home_path %>'><%= t('home.home') %></a>
      <a class="breadcrumb-item" href='#'><%= t('address.profile') %></a>
      <a class="breadcrumb-item" href='#'><%= t('address.account_settings') %></a>
      <a class="breadcrumb-item" href=""><%= t('address.address_management') %></a>
      <a class="breadcrumb-item" href=""><%= t('address.edit') %></a>
  </nav>
</div>
<div class="container">
      <div class="row">
          <div class="col-12">
            <div class="row">
              <div class="col-md-4 mx-auto mt-5 col col-sm-6 col-xs-12">
                <div class="card p-3">
                  <h6 class="text-center"><%= t('address.update_address') %></h6>
                  <hr/>
                  <%= form_for(@address, url: storefront_address_path(@address)) do |f| %>
                    <div class="form-group">
                      <%= f.label :address_line1 %>
                      <%= f.text_field :address_line1, autofocus: true, autocomplete: 'address_line1', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :address_line2 %>
                      <%= f.text_field :address_line2, autofocus: true, autocomplete: 'address_line2', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :city %>
                      <%= f.text_field :city, autofocus: true, autocomplete: 'city', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :zipcode %>
                      <%= f.number_field :zipcode, step: :any, autocomplete: 'zipcode', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :state %>
                      <%= f.text_field :state, autofocus: true, autocomplete: 'state', class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :country %>
                      <%= f.select :country, CS.get.values(), {},class: 'form-control' %>
                    </div>
                    <div class="form-group">
                      <%= f.label :phone %>
                      <%= f.number_field :phone, step: :any, autocomplete: 'phone', class: 'form-control' %>
                    </div>
                    <div class="payment text-center clearfix">
                      <%= f.submit t('address.submit'), class: 'btn btn-primary', data: {loading: {text: "Loading..."}}, id: "button-register", value: "Submit" %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
